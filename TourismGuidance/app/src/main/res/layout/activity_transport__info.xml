<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">
    <io.github.imtilab.tourismguidance.SlidingTabLayout
        android:clickable="true"
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </io.github.imtilab.tourismguidance.SlidingTabLayout>

    <RelativeLayout
        android:id="@+id/transport_RL11"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <TextView
            android:id="@+id/transport_tv111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DISTANCE: "
            android:textSize="16sp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/transport_tv121"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12.0 km"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/transport_tv111"/>
        <Button
            android:id="@+id/transport_b11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAP"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_weight="1"
        />
    <LinearLayout
        android:id="@+id/transport_LL2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/transport_LL21"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp">

            <ImageButton
                android:id="@+id/transport_b21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:src="@drawable/homeicon"
                android:layout_gravity="center_horizontal"
                android:onClick="homeclicked"/>

            <TextView
                android:id="@+id/transport_tv21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/transport_LL22"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:layout_marginRight="5dp">

            <ImageButton
                android:id="@+id/transport_b22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:src="@drawable/foodicon"
                android:layout_gravity="center_horizontal"
                android:onClick="foodclicked"/>

            <TextView
                android:id="@+id/transport_tv22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/transport_LL23"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:layout_marginRight="5dp">

            <ImageButton
                android:id="@+id/transport_b23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:src="@drawable/accomodationicon"
                android:layout_gravity="center_horizontal"
                android:onClick="hotelclicked"/>

            <TextView
                android:id="@+id/transport_tv23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hotel"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/transport_LL3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/transport_LL31"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp">

            <ImageButton
                android:id="@+id/transport_b31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:src="@drawable/producticon"
                android:layout_gravity="center_horizontal"
                android:onClick="productsclicked"/>

            <TextView
                android:id="@+id/transport_tv31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Products"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/transport_LL32"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:layout_marginRight="5dp">

            <ImageButton
                android:id="@+id/transport_b32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:src="@drawable/agencyicon"
                android:layout_gravity="center_horizontal"
                android:onClick="agencyclicked"/>

            <TextView
                android:id="@+id/transport_tv32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agency"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/transport_LL33"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:layout_marginRight="5dp">

            <ImageButton
                android:id="@+id/transport_b33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:src="@drawable/suggestionicon"
                android:layout_gravity="center_horizontal"
                android:onClick="suggestionsclicked"/>

            <TextView
                android:id="@+id/transport_tv33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Suggestions"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>