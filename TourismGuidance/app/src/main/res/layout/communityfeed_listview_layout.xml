<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <LinearLayout
        android:id="@+id/feed_layout_LL1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/feed_layout_iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_my_calendar"
            android:layout_marginRight="5dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/feed_layout_tv11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mr John"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingRight="5dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/feed_layout_tv12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="is going to make a tour"
            android:textSize="13sp"
            android:paddingLeft="5dp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/feed_layout_LL2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:layout_below="@id/feed_layout_LL1"
        android:layout_marginLeft="40dp">
        <TextView
            android:id="@+id/feed_layout_tv21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Looking for: "
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/feed_layout_tv22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingRight="5dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/feed_layout_tv23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="people to travel with him"
            android:textSize="13sp"
            android:paddingLeft="5dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/feed_layout_LL3"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:layout_below="@id/feed_layout_LL2"
        android:layout_marginLeft="40dp">

        <TextView
            android:id="@+id/feed_layout_tv31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spot Location: "
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/feed_layout_tv32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dhaka"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/feed_layout_rL2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/feed_layout_LL3"
        android:paddingTop="5dp">
        <TextView
            android:id="@+id/feed_layout_tv41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATE: "
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/feed_layout_tv42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6/4/2016"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_toRightOf="@id/feed_layout_tv41"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</RelativeLayout>