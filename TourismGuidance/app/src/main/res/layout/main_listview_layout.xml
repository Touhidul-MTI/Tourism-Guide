<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/main_listview_iv1"
        android:layout_width="96dp"
        android:layout_height="72dp"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="5dp"
        android:src="@drawable/listimgformat" />
    <LinearLayout
        android:id="@+id/main_listview_LL1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/main_listview_tv11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chittagong"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/main_listview_tv12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:text="A port city and famous for Ormanto CormanWan"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>